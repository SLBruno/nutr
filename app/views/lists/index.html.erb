<div class="defaultbackground">
  <div class="wrapper"> 

  <h1> Minhas Listas</h1>

  <% List.all.in_groups_of(4) do |group| %>
  <div class="row">
    <% group.each do |list| %>
    <% if list %> 
    <div class="">
    <b><h4><%= link_to list.title, list %></h24</b>
      <p><%= link_to 'Ver', list %>
      <%= link_to 'Editar', edit_list_path(list) %>
      <%= link_to 'Destruir', list, method: :delete, data: { confirm: 'Are you sure?' } %></p> 
      <% end %> 
    </div>
    <% end %> 
  </div>
  <% end %>

  <%= link_to 'Criar nova Lista', new_list_path , class: "btn-highlight" %>

  </div>
</div>