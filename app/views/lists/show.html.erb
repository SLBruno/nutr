<p id="notice"><%= notice %></p>

<h1><%= @list.title %></h1>


<p>
<%= @list.description %>
</p>

<p>
  <strong>criado por:</strong>
  <%= @list.user %>
</p>


<div class="row">
	<h2> Receitas: </h2>
	<div class="col-md-6">
		<% @list.recipes.each do |recipe| %>
		<div class="panel panel-default">
		<strong><%= link_to recipe.title, recipe_path %></strong>
		<p><% recipe.ingredients.each do |ingredient| %></p>
		<p><%= ingredient.unit %> <%= ingredient.measure %> | <%= ingredient.name %></p>

		<% end %> 
		</div>
		<% end %>
	</div>
	<div class="col-md-6">
		<div class="panel panel-default">
		<h3>SOMA DE TODOS OS INGREDIENTES PORRA!!</h3>
		<% @ingredientsconsolidated.each do |key, unit| %>
		<p><%= unit %> 
			<% key.each do |name, measure| %> 
				<%= name %>
				<%= measure %>
				<% end %></p>
		<% end %> 
		</div>
	</div> 
</div>

<%= link_to 'Editar Lista', edit_list_path(@list) %> |
