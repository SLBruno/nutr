<!DOCTYPE html>
<head>
	<title> Nutr | Monte o seu cardápio </title> 
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.min.css">
	<link href='https://fonts.googleapis.com/css?family=Open+Sans:300,700' rel='stylesheet' type='text/css'>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
</head> 
<body>
	<div class="nav navbar navbar-default">
		<div class="container">
				<%= link_to "Nutr | Monte seu Cardápio", root_path, class: "navbar-brand" %> 

			<% if user_signed_in? %>
				<ul class=" nav navbar-nav navbar-right" > 
					<li><%= link_to "Criar nova Receita", new_recipe_path %></li>
					<li><%= link_to "Minhas Listas", lists_path %> </li>
					<li><%= link_to "Deslogar", destroy_user_session_path, method: :delete %> </li>
				</ul>
			<% else %> 
				<ul class="nav navbar-nav navbar-right" > 
					<li><%= link_to "Criar Conta", new_user_registration_path %> </li>
					<li><%= link_to "Logar", new_user_session_path %></li>
				</ul>
			<% end %>
		</div>
	</div> 


	<div class="container">
		<% flash.each do |name, msg| %>
			<%= content_tag :div, msg, class: "alert" %>
		<% end %> 
	</div>

		<%= yield %>

</body>


